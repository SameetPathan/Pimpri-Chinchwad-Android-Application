<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoticeFiveB">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="फिर्याद"
                android:textAlignment="center"
                android:background="@android:color/holo_red_dark"
                android:textColor="@color/white"
                android:layout_marginBottom="30dp"
                android:textSize="25dp"
                ></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="दिनांक -"></TextView>

                <EditText
                    android:id="@+id/t1"
                    android:layout_width="260dp"
                    android:layout_height="52dp"
                    android:layout_marginLeft="64dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:hint="दिनांक"
                    android:paddingLeft="10dp"
                    android:textAlignment="center"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="जा.क्र. बीपी/प्र.क्र"></TextView>

                <EditText
                    android:layout_width="260dp"
                    android:layout_marginLeft="14dp"
                    android:id="@+id/t2"
                    android:textAlignment="center"
                    android:layout_marginRight="10dp"
                    android:text="जा.क्र. बीपी / ? / प्र.क्र. ? / ? / २०२०"
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:layout_height="50dp"></EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="उप अभियंता वर्षापासून  - "></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="260dp"
                    android:layout_marginLeft="74dp"
                    android:id="@+id/t3"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:text="00  "
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:layout_height="50dp"></EditText>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:layout_height="wrap_content"
                    android:text="प्रभाग क्रं -"></TextView>

                <EditText
                    android:layout_width="230dp"
                    android:layout_marginLeft="86dp"
                    android:id="@+id/t4"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:hint="प्रभाग क्रं"
                    android:layout_marginBottom="20dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:layout_height="50dp"></EditText>
            </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:layout_height="wrap_content"
                    android:text="वॉर्ड क्रं.  -"></TextView>

                <EditText
                    android:layout_width="230dp"
                    android:layout_marginLeft="86dp"
                    android:id="@+id/t5"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:hint="पवॉर्ड क्रं.  "
                    android:layout_marginBottom="20dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:layout_height="50dp"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:layout_height="wrap_content"
                    android:text="पिन कोड -"></TextView>

                <EditText
                    android:layout_width="230dp"
                    android:layout_marginLeft="86dp"
                    android:id="@+id/t6"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:hint="पिन कोड"
                    android:layout_marginBottom="20dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:layout_height="50dp"></EditText>
            </LinearLayout>





            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@android:color/holo_green_dark"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="100dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Submit"
                    android:textColor="@android:color/holo_green_dark"
                    android:layout_marginRight="30dp"
                    android:text="Submit"
                    ></Button>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_green_dark"
                    android:id="@+id/back"
                    android:text="Back"></Button>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>